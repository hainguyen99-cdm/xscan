# Database Configuration
MONGODB_URI=mongodb://localhost:27017/xscan
MONGODB_DB_NAME=xscan

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# =============================================================================
# EMAIL CONFIGURATION - Choose ONE option below
# =============================================================================

# Option 1: Gmail with App Password (Recommended for Development)
# This is the simplest setup - just need your Gmail and an app password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-16-character-app-password
SMTP_FROM=noreply@xscan.com

# Option 2: Gmail with OAuth2 (For Production)
# Uncomment and configure these for OAuth2 authentication
# GMAIL_CLIENT_ID=your-google-cloud-client-id
# GMAIL_CLIENT_SECRET=your-google-cloud-client-secret
# GMAIL_REFRESH_TOKEN=your-refresh-token
# GMAIL_ACCESS_TOKEN=your-access-token

# Option 3: Outlook/Hotmail
# SMTP_HOST=smtp-mail.outlook.com
# SMTP_PORT=587
# SMTP_USER=your-email@outlook.com
# SMTP_PASS=your-password
# SMTP_FROM=noreply@xscan.com

# Option 4: Yahoo
# SMTP_HOST=smtp.mail.yahoo.com
# SMTP_PORT=587
# SMTP_USER=your-email@yahoo.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@xscan.com

# Option 5: Custom SMTP Server
# SMTP_HOST=smtp.your-server.com
# SMTP_PORT=587
# SMTP_USER=your-username
# SMTP_PASS=your-password
# SMTP_FROM=noreply@xscan.com

# Option 6: Disable Email Service (Temporary)
# Set this to true to completely disable email functionality
# EMAIL_SERVICE_DISABLED=true

# =============================================================================
# Payment Gateway Configuration
# =============================================================================
STRIPE_SECRET_KEY=your-stripe-secret-key

# =============================================================================
# File Upload Configuration
# =============================================================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
MAX_IMAGE_SIZE=10485760
MAX_VIDEO_SIZE=52428800
MAX_AUDIO_SIZE=10485760

# =============================================================================
# Security Configuration
# =============================================================================
RATE_LIMIT_DEFAULT_MAX=100
RATE_LIMIT_DEFAULT_WINDOW=60
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_AUTH_WINDOW=300
RATE_LIMIT_DONATIONS_MAX=10
RATE_LIMIT_DONATIONS_WINDOW=60
RATE_LIMIT_PAYMENTS_MAX=20
RATE_LIMIT_PAYMENTS_WINDOW=300
RATE_LIMIT_UPLOADS_MAX=5
RATE_LIMIT_UPLOADS_WINDOW=60

# =============================================================================
# Development/Testing Configuration
# =============================================================================
LOG_LEVEL=debug
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR=true
ENABLE_RATE_LIMITING=true
ENABLE_FILE_UPLOADS=true 